category:            Graphics
build-type:          Simple
extra-source-files:  ChangeLog.md, README.md
cabal-version:       >=1.10

library
  exposed-modules: 
    Diagrams.Tests
  other-extensions:
    FlexibleContexts, RankNTypes, DeriveDataTypeable,
    MultiParamTypeClasses, NoMonomorphismRestriction, TypeFamilies
  build-depends:
    base         >=4.9  && <5.0,
    vector,
    JuicyPixels,
    diagrams     >=2.0,
    html,
    geometry,
    filepath,
    process,
    bytestring,
    directory
  hs-source-dirs:      src
  default-language:    Haskell2010
